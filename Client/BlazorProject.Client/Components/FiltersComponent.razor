<div class="card mb-6">
    <div class="card-widget-separator-wrapper">
        <div class="card-body card-widget-separator">
            <div class="row gy-4 gy-sm-1">
                <h5 class="mb-0">Filters</h5>
                <div class="d-flex justify-content-between align-items-center row pt-4 gap-4 gap-md-0">
                    
                        @ChildContent
                    
                </div>
            </div>
            <div class="row gy-4 gy-sm-1">
                <div class="d-flex justify-content-between align-items-center row pt-4 gap-4 gap-md-0">
                    <div class="col-md-6">
                        <button type="button" @onclick="SearchHandler" class="btn btn-primary"><i class="ri-search-line me-sm-1_5"></i>Search @FilterFor</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string FilterFor { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public EventCallback SearchSubmited { get; set; }
    public void SearchHandler()
    {
        SearchSubmited.InvokeAsync();   
    }
}